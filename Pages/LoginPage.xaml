<Page x:Class="PRN_Project_Summer_2024.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PRN_Project_Summer_2024.Windows"
      mc:Ignorable="d"
      Title="Page1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="User name"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="TbUsername"></TextBox>
        
        <Label Grid.Row="1" Grid.Column="0" Content="Password"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="TbPassword"></TextBox>
        <Button Click="ButtonBase_OnClick" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Content="Login"></Button>
    </Grid>
</Page>
